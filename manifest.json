{
    "manifest_version": 3,
    "name": "Colorful Comments for online code editors",
    "version": "1.1",
    "description": "Color and Highlight special comment tags",

    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/colorful_comments_logo.png"
    },
    "icons": {
        "48": "assets/colorful_comments_logo_128.png"
    },
    "permissions": [
        "activeTab", "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}